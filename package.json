{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=apps/frontend\" \"npm run start:dev --workspace=apps/backend\"",
    "build": "npm run build --workspace=apps/frontend && npm run build --workspace=apps/backend",
    "start": "concurrently \"npm run start --workspace=apps/frontend\" \"npm run start:prod --workspace=apps/backend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}


